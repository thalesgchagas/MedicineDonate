<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.our_software_factory.medicinedonate.MainActivity">

    <Button
        android:id="@+id/addAdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar anuncio"
        android:onClick="addButtonClick"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/viewAdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver anuncios"
        android:onClick="viewButtonClick"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encerrar SessÃ£o"
